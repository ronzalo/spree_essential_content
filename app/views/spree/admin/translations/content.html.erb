<% content_for :page_title do %>
  <%= Spree.t(:editing_resource, resource: Spree::Content.model_name.human) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: Spree::Content.model_name.human), spree.admin_page_contents_path(@resource.page), class: 'btn-primary', icon: 'arrow-left' %>
<% end %>

<%= render 'settings' %>

<div class="row translations">
  <div class="col-md-4">
    <%= render 'fields' %>
  </div>
  <div class="col-md-8">
    <%= form_for [:admin, @resource.page, @resource] do |f| %>
      <%= render 'form_fields', f: f %>
      <div class="form-actions" data-hook="buttons">
        <%= button Spree.t(:update), 'update' %>
        <span class="or"><%= Spree.t(:or) %></span>
        <%= button_link_to Spree.t(:cancel), spree.admin_page_contents_path(@resource.page), icon: 'remove' %>
      </div>
    <% end %>
  </div>
</div>